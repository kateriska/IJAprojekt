<?xml version = "1.0"?>
<project name = "projectMHD">
    <target name = "compile">
        <mkdir dir="build" />
        <mkdir dir="dest" />
        <copy todir="build">
            <fileset dir="lib/"/>
            <fileset dir="data/"/>
        </copy>
        <javac srcdir="src/" destdir="build/" />
        <jar destfile="dest/ija-app.jar" basedir="build/">
            <manifest>
                <attribute name="Main-Class" value="MainWindow" />
            </manifest>
        </jar>
    </target>
    <target name = "run" depends="compile">
        <java jar="dest/ija-app.jar" fork="true" />
    </target>
    <target name="clean">
        <delete dir="build" />
        <mkdir dir="build" />
        <delete dir="dest" />
        <mkdir dir="dest" />
    </target>
</project>
